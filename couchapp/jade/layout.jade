    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="keywords")
    meta(name="description")
    meta(name="author")

    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    link(rel="shortcut icon", type="image/x-icon", href="images/favicon.ico")
    link(rel="shortcut icon", type="image/png", href="images/favicon.png")
    link(rel="alternate", type="application/atom+xml", href="atom.xml", title="Blog Atom Feed")

    title
      block title
      | IdeaFreeMonoid

    link(rel="stylesheet", type="text/css", href="https://fonts.googleapis.com/css?family=Electrolize|Linden+Hill")
    link(rel="stylesheet", type="text/css", href="ifm-min.css")

    script(type="text/javascript", src="js/modernizr.custom.js")
    script(type="text/javascript")
      window._gaq = typeof _gaq !== "undefined" ? _gaq || [] : [];
      _gaq.push(['_setAccount', 'UA-18419792-1']);
      _gaq.push(['_trackPageview']);
      _gaq.push(['_trackPageLoadTime']);
      Modernizr.load([
          { test: window.JSON,
            nope: 'json2.min.js'
        }
        , { load: "//www.google.com/jsapi?key=ABQIAAAA7cOLYGluASZQ4jD_I4NiRhSBAIjhQRxrW037Y4ZG4PyizN6QTxRA3EUwLb9eO2IWuj9BLY8IbJzG3Q"}
        , { load: "//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js",
            complete: function (){
                if (!window.jQuery){
                    Modernizr.load('js/jquery-1.7.min.js');
                }
            }
        }
        , { load: ["js/underscore.min.js", "js/plugins.js", "js/site.min.js"]}
        , { load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'}
      ]);
    include ember-templates
  body
    #container
      header
        block userarea

        h1#title IdeaFreeMonoid&nbsp;-&nbsp;
          span#pagetitle

        block menuarea
      #main(role="main")
        block maincontent
      footer

    #templates
      #disqus_thread

    block scripts
